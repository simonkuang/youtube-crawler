# YouTube API 配置
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_google_oauth_client_id
YOUTUBE_CLIENT_SECRET=your_google_oauth_client_secret

# 服务器配置
PORT=3001
NODE_ENV=development

# 代理配置（可选，用于反爬虫）
# 支持多个代理，用逗号分隔
# 格式：http://username:password@host:port 或 http://host:port
PROXY_LIST=http://proxy1.example.com:8080,http://proxy2.example.com:8080

# 数据库配置
DATABASE_PATH=./data/youtube-scrawler.db

# 会话加密密钥（用于加密存储的Cookie和Token）
SESSION_SECRET=your_random_secret_key_here_please_change_it

# 爬虫配置
# 请求延迟范围（毫秒），模拟人类行为
MIN_REQUEST_DELAY=1000
MAX_REQUEST_DELAY=3000

# API配额限制
DAILY_API_QUOTA=10000
MAX_REQUESTS_PER_SECOND=5

# 浏览器自动化配置
HEADLESS=true
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
